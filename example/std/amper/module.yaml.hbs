product:
  type: {{ _module.type }}
  {{#if _module.platforms}}
  platforms: {{ _module.platforms }}
  {{/if}}

dependencies:
  {{#each _module.dependencies}}
    {{#when type}}
    {{ "maven" }}
    - {{ group }}:{{ artifact }}:{{ version }}
    {{ "project" }}
    - {{ path }}
    {{ "catalog" }}
    - ${{ key }}
    {{/when}}
  {{/each}}

{{#if _module.amper}}
settings:
  {{#each _module.amper.entries}}
    {{ key }}: {{ value }}
  {{/each}}
{{/if}}